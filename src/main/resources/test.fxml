<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxWidth="200.0" prefHeight="100.0" prefWidth="200.0" spacing="10" style="-fx-background-color: lightgreen; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Text fx:id="senderName" text="Name" wrappingWidth="180">
            <font>
                <Font name="Tahoma Bold" size="15" />
            </font>
        </Text>
        <Text fx:id="messageBody" text="This is a message..." wrappingWidth="180">
            <font>
                <Font name="Tahoma Regular" size="12" />
            </font>
        </Text>
        <Text fx:id="timeStamp" fill="dimgrey" strokeWidth="0.6" text="00:00">
            <font>
                <Font name="Tahoma Bold" size="8.0" />
            </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
        </Text>
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>

</VBox>
