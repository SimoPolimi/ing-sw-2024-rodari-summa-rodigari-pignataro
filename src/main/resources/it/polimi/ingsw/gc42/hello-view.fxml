                        <ImageView fx:id="view2" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#onFlipCard2ButtonClicked" onMouseEntered="#selectCard2" onMouseExited="#deselectCard" pickOnBounds="true" preserveRatio="true">
