                            <HBox.margin>
                                <Insets left="-20.0" />
                            </HBox.margin></Text>
                    </children>
                </HBox>
                <HBox id="bottomHintContainer" alignment="CENTER" maxWidth="200" minHeight="-Infinity" prefHeight="50.0" prefWidth="200.0" spacing="15">
                    <children>
                        <ImageView fx:id="KBNavHint" fitHeight="71.0" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../../navigateKeyboardHint.png" />
                            </image>
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </ImageView>
                        <Text fx:id="textNav" fill="white" text="Navigate">
                            <font>
                                <Font name="Constantia Italic" size="15.0" />
                            </font>
                        </Text>
                    </children>
                    <padding>
                        <Insets bottom="5.0" />
                    </padding>
                </HBox>

            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <VBox.margin>
                <Insets left="40.0" />
            </VBox.margin>
        </VBox>
    </children>
</VBox>
