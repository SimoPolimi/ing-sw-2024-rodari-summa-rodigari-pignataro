                    </children>
                    <padding>
                        <Insets left="5"/>
                    </padding>
                </HBox >
                <HBox id="card1Container" fx:id="handCard1" alignment="CENTER_LEFT" maxWidth="-Infinity" prefHeight="134.0" prefWidth="340.0" spacing="30">
